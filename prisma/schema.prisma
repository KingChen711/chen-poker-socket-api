generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  clerkId       String   @unique
  email         String   @unique
  username      String   @unique
  name          String
  picture       String
  createdAt     DateTime @default(now())
  currentRoomId String?  @db.ObjectId
}

model Room {
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  roomCode  String
  roomOwner String     @db.ObjectId
  players   Player[]
  gameObj   GameObj?
  status    GameStatus
}

type GameObj {
  dealerIndex     Int
  turn            Int
  callingValue    Int
  deck            Card[]
  dealer          String   @db.ObjectId
  smallBlind      String   @db.ObjectId
  bigBlind        String   @db.ObjectId
  foldPlayers     String[] @db.ObjectId
  checkingPlayers String[] @db.ObjectId
  allInPlayers    String[] @db.ObjectId
  readyPlayers    String[] @db.ObjectId
  communityCards  Card[]
  winner          String?  @db.ObjectId
}

type Player {
  userId  String @db.ObjectId
  //user
  hand    Hand?
  balance Int?
  bet     Int?
}

type Hand {
  holeCards  Card[]
  rank       Int? //Rank: -1->9
  pokerCards Card[]
}

type Card {
  value Int //CardValue:2->14
  suit  Int //CardSuit:0-3
}

enum GameStatus {
  PRE_GAME
  PRE_FLOP
  THE_FLOP
  THE_TURN
  THE_RIVER
  SHOWDOWN
}

